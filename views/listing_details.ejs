<!DOCTYPE html>
<html>
  <head>
     <% include partials/head %>
  </head>
  <body>
    <div class="container-fluid">
    	<div class="row">
    		<div class="col-12">
          <% include partials/navigation %>
    			<h3><%= page %></h3><br>

  					<div>
              <% if (theListing.name) { %>
    					  <h3><a href="http://localhost:3000/listing/<%= theListing.id %>"><%= theListing.name %></a><h2>
              <% } else { %>
                <h3>NOT FOUND</h3>
              <% } %>

              <% if (theListing.picture_url) { %>
              <img width="960" height="540" src="<%= theListing.picture_url %>" />
              <% } %>

              <table>
                <tr>
                  <td>
                    <h3>Price: $<%= theListing.price %></h3>
                  </td>
                  <td>
                    <% if (userType == "tenant") { %>
                      <button><a href="http://localhost:3000/booking/<%= theListing.id %>">Schedule</a></button>
                    <% } %>
                  </td>
                </tr>
                <tr>
                  <td style="padding-right:16px;">
                    <h3>Bathrooms: <%= theListing.bathrooms %></h3>
                  </td>

                  <td style="padding-right:16px;">
                    <h3>Bedrooms: <%= theListing.bedrooms %></h3>
                  </td>

                  <td style="padding-right:16px;">
                    <h3>Beds: <%= theListing.beds %></h3>
                  </td>
                </tr>
              </table><br>

              <% if (theListing.description) { %>
                <p> <%= theListing.description %> </p>
              <% } %>

              <% if (theListing.host_id) { %>
                <p><a href="http://localhost:3000/profile/host/<%= theListing.host_id %>"><%= theListing.host_id %></a><p>
              <% } %>
            </div><br><br>

            <div>
              <h1>Reviews</h1><br>

              <% if (reviewsArray.length == 0) { %>
                <div>
                  <h3>This listing doesn't have any reviews</h3>
                </div>

              <% } else { %>

                <% reviewsArray.forEach( r => { %>
                  <div>
                    <h3><%= r.reviewer_name %></h3>
                    <h3><%= r.date %></h3>
                    <p><%= r.comments %></p>
                  </div>
                <% }); %>

              <% } %>

            </div>
            <% if (theListing.host_id == user.id) { %>
              <p><a href="http://localhost:3000/listing/<%= theListing.id %>/edit">Edit Listing</a><p>
            <% } %>
        </div>
    	</div>
	</div>
  </body>
</html>
