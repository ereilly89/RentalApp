
<!DOCTYPE html>
<html>
  <head>
     <% include partials/head %>
  </head>
  <body>
    <div class="container-fluid">
    	<div class="row">
    		<div class="col-12">
              <% include partials/navigation %>

              <% if (user) { %>
                <h3><%= page %></h3>

                    <% listingArray.forEach( c => { %>
                <div>
                      <h2><a href="http://localhost:3000/listing/<%= c.id %>"><%= c.name %></a><h2>
                              <img width="960" height="540" src="<%= c.picture_url %>" />
                              <div>
                                <% if (userType == "tenant") { %>
                                <button><a href="http://localhost:3000/booking/<%= c.id %>">Schedule</a></button>
                                <% } %>
                                <h3>Bathrooms: <%= c.bathrooms %></h3>
                                <h3>Bedrooms: <%= c.bedrooms %></h3>
                                <h3>Beds: <%= c.beds %></h3>
                              </div>
                      <p> <%= c.description %> </p>
                              <p><a href="http://localhost:3000/profile/host/<%= c.host_id %>"><%= c.host_id %></a><p>
                </div>
                        <br>
                <% }) %>
                </div>

              <% } else { %>
                <div class="row">
            		  <div class="col-12">
                        <form id="signin-form">
                			<input id="username" type="username" placeholder="Username" maxLength=21 style="margin-bottom:3px"></input><br>
                            <input id="password" type="password" placeholder="Password"></input><br>
                            <p class="error" id="signin-error"></p>
                            <label for="tenant">Tenant</label>
                            <input id="tenant-radio" name="user" type="radio" checked="true"></input>
                            <label for="host">Host</label>
                            <input id="host-radio" name="user" type="radio"></input><br>
                            <input type="submit" value="Submit"></input>
                        </form>
                        <br><p>Don't have an account?</p>
                        <a href="/tenant/signup">Sign up as tenant</a><br>
                        <a href="/host/signup">Sign up as host</a>
            		  </div>
            		</div>
              <% } %>

    	</div>
	</div>
  </body>
</html>
